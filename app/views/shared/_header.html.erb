<meta name="viewport" content="width=device-width,initial-scale=1">

<div class="header_main">
  <div class="header_logo">
    <%= image_tag("listeng.gif", size: "60x60") %>
  </div>

  <div class="sns_section">
    <div class="sns">
      <%= link_to image_tag("logos/tw.png", size: "25x25"), "https://twitter.com/keisuganodev", target: "_blank" %>
    </div>
    <div class="sns">
      <%= link_to image_tag("logos/blogger.png", size: "25x25"), "https://keisugano.blogspot.com/", target: "_blank" %>
    </div>
  </div>

  <div class="lang">
    <% if domain == "anime" %>
      <%= link_to label_reverse, animes_path(lang: switch_lang) %>
    <% else %>
      <%= link_to label_reverse, root_path(lang: switch_lang) %>
    <% end %>
  </div>

  <h1 class="header_text"><%= t("keikuns_home_page") %></h1>
  <% lang = I18n.locale %>

  <div class="header_stripe">
    <div class="header_buttons">
      <div class="header_button">
        <%= link_to t("header.title.home"), root_path(lang: lang), id: "b"  %>
      </div>
      <div class="header_button">
        <%= link_to t("header.title.about"), root_path(lang: lang), id: "b" %>
      </div>
      <div class="header_button">
        <%= link_to t("header.title.manga"), root_path(lang: lang), id: "b"  %>
      </div>
      <div class="header_button">
        <%= link_to t("header.title.music"), root_path(lang: lang), id: "b"  %>
      </div>
      <div class="header_button">
        <%= link_to t("header.title.coding"), root_path(lang: lang), id: "b"  %>
      </div>
      <div class="header_button">
        <%= link_to t("header.title.shop"), root_path(lang: lang), id: "b"  %>
      </div>
    </div>
  </div>
</div>
